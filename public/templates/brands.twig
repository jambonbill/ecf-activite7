{% extends "base.twig" %}

{% block content %}

<div class="container">
    
    <div class="row">        
        <h3 class="title py-3">Les marques</h3>
    </div>
</div>


<div class="container">
    
    <a href="/brand/add" class="py-3"><i class="fas fa-square-plus"></i> Ajouter une marque</a>

    <table class="table is-hoverable">
        <thead>
            <tr>
              <th>Brand</th>
              <th>Updated at</th>
            </tr>
        </thead>
        
        <tbody>
        {% for item in brands %}
    
            <tr>
            <td>{{ item.name }}</td>                                            
            <td><i>{{ item.updated_at }}</i></td>
            
        {% endfor %}
        </tbody>
        </table>

    </div>
</div>

{% endblock %}
